{
    "compileOnSave": true,
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "allowJs": true,
      "jsx": "react",
      "outDir": "./dist",
      "rootDir": "./",
      "strict": true,
      "moduleResolution": "node",
      "baseUrl": "./src",
      "typeRoots": ["node_modules/@types", "src/typings"],
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }